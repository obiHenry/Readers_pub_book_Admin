<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FantasyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="20dp">


            <ImageButton
                android:id="@+id/FantasybookCover"
                android:layout_width="250dp"
                android:layout_height="350dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_add_a_photo"
                android:scaleType="fitCenter"
                android:layout_centerHorizontal="true">

            </ImageButton>

            <EditText
                android:id="@+id/FantasybookTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_below="@+id/FantasybookCover"
                android:layout_centerInParent="true"
                android:background="@drawable/edit_text_background"
                android:padding="15dp"
                android:hint="book title">

            </EditText>

            <EditText
                android:id="@+id/FantasybookDescription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:inputType="textMultiLine"
                android:layout_below="@+id/FantasybookTitle"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:background="@drawable/edit_text_background"
                android:padding="15dp"
                android:hint="book description">

            </EditText>

            <EditText
                android:id="@+id/FantasybookContent"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:inputType="textMultiLine"
                android:layout_below="@+id/FantasybookDescription"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:background="@drawable/edit_text_background"
                android:padding="15dp"
                android:hint="content of the book">

            </EditText>


            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Update Fantasy books"
                android:textColor="#fff"
                android:padding="12dp"
                android:layout_below="@+id/FantasybookContent"
                android:id="@+id/updateFantasyBook"
                android:layout_marginTop="15dp"/>




        </RelativeLayout>


    </RelativeLayout>

</ScrollView>